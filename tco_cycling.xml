         ========================== -->
    <TripGroups>
        <TripGroup tripGroupId="tg1">
            <tourId>t1</tourId>
            <leadGuideId>g1</leadGuideId>
            <maxParticipants>8</maxParticipants>
            <!-- currentParticipants references clients -->
            <currentParticipants>c1</currentParticipants>
        </TripGroup>
    </TripGroups>
    
