         ========================== -->
    <Stages>
        <Stage stageId="s1">
            <tourId>t1</tourId>
            <dayNumber>1</dayNumber>
            <title>Nice to Guillaumes</title>
            <description>Climb from the coast into the first foothills of the Alps.</description>
            <distanceKm>120.0</distanceKm>
            <!-- Activities & paths for this stage -->
            <activityIds>a1</activityIds>
            <cyclingPathIds>p1</cyclingPathIds>
            <startDestinationId>d1</startDestinationId>
            <endDestinationId>d3</endDestinationId>
        </Stage>
        <Stage stageId="s2">
            <tourId>t1</tourId>
            <dayNumber>2</dayNumber>
            <title>Guillaumes to Briançon</title>
