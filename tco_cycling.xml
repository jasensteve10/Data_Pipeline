         ========================== -->
    <TourPackages>
        <TourPackage tourId="t1">
            <title>Alpine Coast to Peaks</title>
            <description>From the Mediterranean coastline to the high Alps over two days.</description>
            <totalDurationDays>2</totalDurationDays>
            <difficulty>CHALLENGING</difficulty>
            <currency>EUR</currency>
            <luggageTransport>true</luggageTransport>
            <!-- Stages belonging to this tour: s1 and s2 -->
            <stageIds>s1 s2</stageIds>
        </TourPackage>
    </TourPackages>
    
